rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helpers ──────────────────────────────────────────────
    function isSignedIn() {
      return request.auth != null;
    }

    function belongsToCompany(companyId) {
      return isSignedIn() && request.auth.token.companyId == companyId;
    }

    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function hasAnyRole(roles) {
      return isSignedIn() && request.auth.token.role in roles;
    }

    function isAdmin(companyId) {
      return belongsToCompany(companyId) && hasRole('admin');
    }

    function isOperatorOrAdmin(companyId) {
      return belongsToCompany(companyId) &&
             hasAnyRole(['admin', 'operator']);
    }

    // ── User profiles ────────────────────────────────────────
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if false; // Only Cloud Functions can write
    }

    // ── Company root ─────────────────────────────────────────
    match /companies/{companyId} {
      allow read: if belongsToCompany(companyId);
      allow write: if isAdmin(companyId);

      // ── Bookings ────────────────────────────────────────────
      match /bookings/{bookingId} {
        allow read: if belongsToCompany(companyId);
        // ALL writes go through Cloud Functions
        allow write: if false;
      }

      // ── Parking Locations ───────────────────────────────────
      match /locations/{locationId} {
        allow read: if belongsToCompany(companyId);
        allow write: if isAdmin(companyId);

        // ── Parking Spots ───────────────────────────────────
        match /spots/{spotId} {
          allow read: if belongsToCompany(companyId);
          allow write: if false;
        }
      }

      // ── Meta (counters, settings) ──────────────────────────
      match /meta/{docId} {
        allow read: if belongsToCompany(companyId);
        allow write: if false;
      }

      // ── Notifications ──────────────────────────────────────
      match /notifications/{notifId} {
        allow read: if belongsToCompany(companyId);
        // Users can mark notifications as read only
        allow update: if belongsToCompany(companyId)
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
        allow create, delete: if false;
      }

      // ── Daily/Monthly Stats ────────────────────────────────
      match /stats/{statId} {
        allow read: if isOperatorOrAdmin(companyId);
        allow write: if false;
      }

      // ── Audit Log ──────────────────────────────────────────
      match /audit/{auditId} {
        // Only admins can read audit logs
        allow read: if isAdmin(companyId);
        allow write: if false;
      }

      // ── Idempotency Keys (internal) ────────────────────────
      match /_idempotency/{keyId} {
        allow read, write: if false;
      }
    }

    // ── System Collections (Cloud Functions only) ────────────
    match /_rateLimits/{docId} {
      allow read, write: if false;
    }

    match /_flightCache/{docId} {
      allow read, write: if false;
    }

    // ── Default deny ─────────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
